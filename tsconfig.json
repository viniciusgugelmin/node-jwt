    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "typeRoots": [
    "@types",
    "./node_modules/@types"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
